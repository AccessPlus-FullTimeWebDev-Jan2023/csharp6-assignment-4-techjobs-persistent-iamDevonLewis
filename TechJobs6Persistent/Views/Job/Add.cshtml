@using TechJobs6Persistent.ViewModels
@model AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" type="text"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Empoloyer</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
        <span asp-validation-for="Name" class="text-danger"></span>

    <a class="btn btn-primary" asp-controller="Employer" asp-action="Create">New Employee</a>
    </div>
    <br />

    <input type="submit" value="Add Job" />
</form>